int main()
{
    cout << "KUBUS" << endl;
    int sisi;
    float luas; //6xsxs
    int a=6;
    float volume; //sxsxs
    float keliling; //s+s+s+s
    float x;
    cout << "masukan nilai sisi: " << endl;
    cin >> x;
    cout <<"\nMaka luasnya: " << x * x * 6;
    cout << "\nMaka volume: " << x * x * x;
    cout << "\nMaka keliling: " << x + x + x + x << endl;

    cout << "-------------------------------------------" << endl;

    cout << "SEGITIGA SAMA SISI" << endl;
